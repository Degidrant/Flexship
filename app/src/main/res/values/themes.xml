<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlexshipCookingAss" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_green</item>
        <item name="colorPrimaryVariant">@color/purple_wildberry</item>
        <item name="colorOnPrimary">@color/gray_silver</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_green</item>
        <item name="colorSecondaryVariant">@color/blue_green</item>
        <item name="colorOnSecondary">@color/gray_silver</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/CustomChip</item>
        <item name="textInputStyle">@style/CustomInputStyle</item>
        <item name="materialAlertDialogTheme">@style/MaterialDialog</item>
        <item name="cardViewStyle">@style/CardView.FlexShip</item>
        <item name="imageButtonStyle">@style/ModernImageButton</item>
    </style>

    <style name="CustomInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconTint">?attr/colorPrimaryVariant</item>
        <item name="endIconTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_box_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/text_box_color</item>
        <item name="hintTextColor">@color/label_color</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
    </style>

    <style name="CardView.FlexShip" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="FlexOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black_mild</item>
    </style>

    <style name="MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/DialogShape</item>
        <item name="titleTextColor">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveBStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeBStyle</item>
    </style>

    <style name="MaterialTextViewAccent" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/purple_wildberry</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialTextViewSemiAccent" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/blue_green</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="MaterialTextViewBlackHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="TextButtonsFit" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">2dp</item>
        <item name="android:minWidth">2dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>


    <style name="DialogShape" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/CustomShape</item>
    </style>
    <style name="CustomShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="PositiveBStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_wildberry</item>
    </style>
    <style name="NegativeBStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/purple_wildberry</item>
    </style>

    <style name="roundedImageViewFull" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ModernImageButton">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="tint">@color/blue_green</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>